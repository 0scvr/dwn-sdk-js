{
  "name": "hub-sdk",
  "version": "0.1.0",
  "description": "A reference implementation of https://identity.foundation/identity-hub/spec/",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js"
  },
  "@comment files": [
    "the files property informs npm about which files we want to include in our published package.",
    "dist will include all transpiled js. There's no point in including .ts files"
  ],
  "files": [
    "dist",
    "src"
  ],
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --extensions '.ts' --out-dir 'dist/cjs' --source-maps",
    "build:esm": "cross-env BABEL_ENV=esm babel src --extensions '.ts' --out-dir 'dist/esm' --source-maps",
    "build:bundles": "cross-env BABEL_ENV=esmBundled rollup -c",
    "build:declarations": "tsc -p tsconfig.json",
    "build": "npm-run-all -l clean -p build:esm build:cjs build:bundles build:declarations",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "test": "ts-mocha --type-check tests/**/*.ts"
  },
  "dependencies": {
    "@ipld/dag-cbor": "7.0.1",
    "@types/ms": "^0.7.31",
    "ajv": "8.11.0",
    "base64url": "^3.0.1",
    "chai-as-promised": "^7.1.1",
    "date-fns": "2.28.0",
    "jose": "4.6.0",
    "ms": "2.1.3",
    "multiformats": "9.6.4",
    "buffer": "6.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/chai": "4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/lodash": "4.14.179",
    "@types/mocha": "9.1.0",
    "@typescript-eslint/eslint-plugin": "5.14.0",
    "@typescript-eslint/parser": "5.13.0",
    "chai": "4.3.6",
    "cross-env": "7.0.3",
    "eslint": "8.11.0",
    "mocha": "9.2.1",
    "mockdate": "^3.0.5",
    "ms": "2.1.3",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "rollup": "2.70.0",
    "rollup-plugin-terser": "7.0.2",
    "ts-mocha": "9.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.5.5",
    "typescript-json-schema": "^0.53.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TBD54566975/hub-sdk-js.git"
  },
  "author": "Moe Jangda <moe@squareup.com> (https://twitter.com/moe_jangda)",
  "contributors": [
    {
      "name": "Daniel Buchner",
      "email": "dbuchner@squareup.com",
      "url": "https://twitter.com/csuwildcat"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/TBD54566975/hub-sdk-js/issues"
  },
  "homepage": "https://github.com/TBD54566975/hub-sdk-js#readme"
}
